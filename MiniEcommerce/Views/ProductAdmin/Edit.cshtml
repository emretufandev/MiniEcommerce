@model ProductModel

<h1 class="h3">Edit Product</h1>
<hr>

<form asp-controller="ProductAdmin" asp-action="Edit" method="POST" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-12">
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
    </div>

    @if (ViewBag.Message != null)
    {
        <div class="row">
            <div class="col-md-12">
                <div class="text-danger">
                    @ViewBag.Message
                </div>
            </div>
        </div>
    }

    <div class="row">
        <div class="col-md-8">

            <input type="hidden" name="ProductId" value="@Model.Id">
            <div class="form-group row">
                <label asp-for="Name" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="Name">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Barcode" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="Barcode">
                    <span asp-validation-for="Barcode" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Price" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="Price">
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Stock" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="Stock" type="number">
                    <span asp-validation-for="Stock" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Description" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <textarea id="editor" class="form-control" asp-for="Description"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Images</label>
                <div class="col-sm-10">
                    <input type="file" name="files" multiple />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-10 offset-sm-2">
                    <button type="submit" class="btn btn-primary">Save Product</button>
                </div>
            </div>
        </div>
    </div>
    @if (ViewBag.Images != null)
    {
        <div class="row">
            <div class="col-md-8">
                <table id="images" class="table table-bordered mt-3">
                    <thead>
                        <tr>
                            <td style="width: 30px;">Id</td>
                            <td style="width: 100px;">Image</td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var image in ViewBag.Images as List<ProductImage>)
                        {
                            <tr>
                                <td>@image.Id</td>
                                <td><img asp-append-version="true" src="@image.Url" width="80"></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</form>

@section Scripts
{
}