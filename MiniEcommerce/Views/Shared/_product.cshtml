@model ProductListViewModel

<div class="card mb-2">
    <img class="card-img-top" asp-append-version="true" src="@Model.DefaultImageUrl" alt="">
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <small class="text-muted">
            <i class="fas fa-lira-sign"></i>@Model.Price
        </small>
    </div>
    <div class="card-footer text-center">
        <a asp-controller="Product" asp-action="Detail" asp-route-id="@Model.Id" class="btn btn-primary btn-sm">Details</a>
    </div>
</div>